<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <com.mehmetbalbay.bitcointicker.view.ui.customview.TextViewWithFontBold
        android:id="@+id/splashTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/loodos"
        android:textColor="@color/white"
        android:textSize="@dimen/splash_title_text_size" />

    <com.mehmetbalbay.bitcointicker.view.ui.customview.TextViewWithFont
        android:id="@+id/splashSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/splash_sub_title_margin_top"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/splash_title_text_size" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashSubTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/splash_progress_margin_top" />

</RelativeLayout>